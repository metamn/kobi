- content_for :title do
  = t 'devise.confirmations.link'
  
- semantic_form_for resource_name, resource, :url => confirmation_path(resource_name) do |f|
  - f.error_messages
  - f.inputs do
    = f.input :email       
  - f.buttons do
    = f.commit_button :confirm
  
.links
  = render :partial => "shared/devise_links"
