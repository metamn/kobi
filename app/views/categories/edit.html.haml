- content_for :title do 
  = t('activerecord.operations.category.edit')
  
- form_for(@category) do |f|
  = f.error_messages
  %p
    = f.label t('activerecord.attributes.category.name')
    %br
    = f.text_field :name
    
  %p
    = f.label t('activerecord.attributes.category.description')
    %br
    = f.text_area :description
  
  - unless @category_parents.blank?
    %p  
      = f.label t('activerecord.attributes.category.parent')
      %br
      = select :category, :ancestry, @category_parents.collect {|c| [c.name, c.id]}, {:include_blank => true}
    
  
  = f.submit t('activerecord.operations.category.edit')
  = link_to t('activerecord.operations.back'), categories_path   

