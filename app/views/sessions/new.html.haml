
#login
  .content
    - semantic_form_for resource_name, resource, :url => session_path(resource_name) do |f|
      - f.error_messages
      - if flash[:notice] 
        %p.notice
          =flash[:notice]
      - elsif flash[:alert] 
        %p.error
          =flash[:alert]      
        
      - f.inputs do
        = f.input :email, :required => false
        = f.input :password, :required => false    
        - if devise_mapping.rememberable?
          = f.input :remember_me, :as => :boolean, :required => false
          
      - f.buttons do
        = f.commit_button :login
      
    .links
      = render :partial => "shared/devise_links"
    
#info
  .content
    %h3
      = t('devise.sessions.link')    
