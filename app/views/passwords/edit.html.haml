- content_for :title do
  = t 'devise.passwords.change'
  
- semantic_form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put } do |f|
  - f.error_messages
  - f.inputs do
    = f.input :password
    = f.input :password_confirmation      
  - f.buttons do
    = f.commit_button :password_change
  

= render :partial => "shared/devise_links"
