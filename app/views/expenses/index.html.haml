  = t('expenses.title.all')
- content_for :flash do
  = render :partial => "shared/flash_messages", :locals => {:messages => [:success, :error]}
  
- content_for :sidebar do
  %h4.title
    = t('dashboard.sidebar.additional_operations')
  %ul
