#index_expenses
  %ul.header
    %li.date
      = t('activerecord.attributes.expense.date')
    %li.amount
      = t('activerecord.attributes.expense.amount')
    %li.category
      = t('activerecord.attributes.expense.category')
    %li.tags
      = t('activerecord.attributes.expense.tags')
  
  
  %ul.items  
    - @current.each do |expense|
      .item{:class => "#{cycle('even', 'odd')} block"}
        %li.date
          = link_to_remote expense.date, :url => edit_expense_path(expense), :method=> :get, :update => "ajax-update-#{expense.id}"          
        %li.amount
          = expense.amount
        %li.category
          = expense.category.blank? ? t('activerecord.operations.category.empty') : expense.category.name
        %li.tags
          = expense.tag_list          
        %div{:id => "ajax-update-#{expense.id}"}
  
  .clear
  
